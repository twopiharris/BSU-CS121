import java.util.*;

public class ExceptionDemo{
    public static void main(String[] args){
	new ExceptionDemo();
    } // end main

    public ExceptionDemo(){
	Scanner input = new Scanner(System.in);
        System.out.println("Please enter a number");
        int x = input.nextInt();
	System.out.println("You said: " + x);
    } // end constructor
} // end class def

 
